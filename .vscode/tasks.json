//Task:shortcut to run a the file which will take input and show output of the programme automatically with programme runtime status such as memory comsume and execution time
{
  "version": "2.0.0",
  "tasks": [
    {
      // For
      // C
      // and
      // C++
      // Programs
      "label": "Compile and run Cpp",
      "type": "shell",
      "windows": {
        "command": "",
        "args": [
          "copy",
          "${file}",
          "${workspaceFolder}\\jspwTest.cpp",
          "&&",
          "g++",
          "jspwTest.cpp",
          "-o",
          "jspwTest",
          "&&",
          "jspwTest",
          "<",
          "input.txt",
          ">",
          "output.txt",
          "&&",
          "del",
          "jspwTest.exe",
          "&&",
          "del",
          "jspwTest.cpp"
        ]
      },
      "linux": {
        "command": "",
        "args": [
          "g++",
          "-g",
          "${relativeFile}",
          "-o",
          "${fileBasenameNoExtension}.out",
          "&&",
          "clear",
          "&&",
          "timeout",
          "10",
          "/usr/bin/time",
          "-v",
          "--output",
          "sys.txt",
          "./${fileBasenameNoExtension}.out",
          "<",
          "input.txt",
          ">",
          "output.txt",
          "&&",
          "rm",
          "*out"
        ]
      },
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
